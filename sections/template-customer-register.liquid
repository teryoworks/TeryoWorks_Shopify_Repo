<div class="flex h-full items-center justify-center px-6 py-12 md:px-4 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <h1 class="mt-6 text-center text-3xl font-bold">Register an account</h1>
    </div>
    <div class="mt-8">
      {% form 'create_customer' %}
        {% if form.errors %}
          <div
            class="relative border border-red-400 bg-red-100 px-4 py-3 text-red-700"
            role="alert"
          >
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="first_name" class="sr-only">First name</label>
          <input
            type="text"
            name="customer[first_name]"
            id="first_name"
            autocomplete="given-name"
            class="relative block w-full border px-3 py-2"
            placeholder="First name"
          >
        </div>

        <div class="my-2">
          <label for="last_name" class="sr-only">Last name</label>
          <input
            type="text"
            name="customer[last_name]"
            id="last_name"
            autocomplete="family-name"
            class="relative block w-full border px-3 py-2"
            placeholder="Last name"
          >
        </div>

        <div class="my-2">
          <label for="birthday" class="sr-only">Birthday</label>
          <input
            type="date"
            name="customer[note][Birthday]"
            id="birthday"
            class="relative block w-full border px-3 py-2"
          >
        </div>

        <div class="my-2">
          <label for="email_address" class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative block w-full border px-3 py-2"
            placeholder="Email address"
          >
        </div>

        <div class="my-2">
          <label for="password" class="sr-only">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="relative block w-full border px-3 py-2"
            placeholder="Password"
          >
        </div>

        <div>
          <button
            type="submit"
            class="relative w-full bg-gray-600 px-4 py-2 text-sm font-medium text-white hover:bg-gray-900"
          >
            Create account
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>
