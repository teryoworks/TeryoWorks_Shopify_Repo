{% assign main_menu_linklist = linklists[section.settings.menu].links %}
hello world
<div
  class="relative bg-white"
>
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between py-6 md:justify-start md:space-x-10">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start truncate lg:flex-1">
        <h1 class="truncate text-xl font-bold">
          {{ shop.name }}
        </h1>
      </div>

      <!-- STEP 1: CREATE THE HAMBURGER MENU BUTTON -->
      <div class="-my-2 -mr-2 ml-3 md:hidden">
        <button
          x-on:click="mobileMenuOpen = true"
          type="button"
          class="inline-flex items-center justify-center bg-white p-2 focus:outline-none"
        >
          {% render 'icon-menu' %}
        </button>
      </div>
      s
      <!-- NAVIGATION MENU -->
      <nav
        x-data="{ open: false }"
        class="hidden space-x-10 md:flex"
      >
        {% for link in main_menu_linklist %}
          {% if link.links != blank %}
            <div class="relative">
              <button
                x-on:click="open = ! open"
                type="button"
                class="inline-flex items-center text-base text-gray-500 hover:text-gray-900"
              >
                {{ link.title }}
                {% render 'icon-dropdown' %}
              </button>

              <!-- STEP 1: Place the div under the button tag -->
              <div
                x-show="open"
                @click.away="open = false"
                class="absolute z-10 mt-5 -ml-5 w-screen max-w-md transform px-2 sm:px-0 lg:left-1/2 lg:ml-0 lg:-translate-x-1/2"
              >
                <div class="ring-opacity-5 overflow-hidden rounded-lg border shadow-lg ring-black">
                  <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                    {% for childlink in link.links %}
                      <!-- CREATE THE SUBLINK -->
                      <a
                        href="childlink.url"
                        class="items start -m-3 flex rounded-lg p-3 hover:bg-gray-100"
                      >
                        <div class="ml-4">
                          <p class="text-base font-medium text-gray-900">
                            {{ childlink.title }}
                          </p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <div class="relative">
              <a
                href="{{link.url}}"
                class="text-base text-gray-500 hover:text-gray-900 {% if link.active%} text-red-900{% endif %}"
              >
                {{ link.title }}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </nav>

      <div class="hidden items-center justify-end space-x-5 md:flex md:flex-1">
        <a
          href=" {{ routes.cart_url }} "
          class="text-base whitespace-nowrap text-gray-500 hover:text-gray-900"
        >
          {% render 'icon-shopping-bag' %}
        </a>

        {% if shop.customer_accounts_enabled %}
          <a
            href="{{ routes.account_login_url }}"
            class="text-base text-gray-500 hover:text-gray-900"
            >Login</a
          >
          <a
            href="{{ routes.account_register_url }}"
            class="text-base text-gray-500 hover:text-gray-900"
            >Register</a
          >
        {% else %}
          <!-- login links off -->
        {% endif %}
      </div>
    </div>
  </div>

  <!-- MOBILE MENU CONTAINER -->
  <div
    x-show="mobileMenuOpen"
    class="absolute inset-x-0 top-0 z-10 origin-top-left transform p-2 md:hidden"
  >
    <div class="ring-opacity-5 w-full rounded-lg bg-white shadow-lg ring-1 ring-black">
      <div class="divide-y-2 divide-gray-50 p-5">
        <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->
        <div class="flex items-center justify-between pb-3">
          <div>
            <h1 class="text-lg text-gray-500">
              {{ section.settings.mobile_menu_title }}
            </h1>
          </div>
          <div class="-mr-2">
            <button
              x-on:click="mobileMenuOpen = false"
              type="button"
              class="rounded-md bg-white p-2 text-gray-500"
            >
              {% render 'icon-close' %}
            </button>
          </div>
        </div>

        <!-- NAVIGATION LINKS FOR MOBILE MENU -->
        <div class="pt-3">
          <nav class="grid gap-y-7">
            {% for link in main_menu_linklist %}
              {% assign link_handle = link.handle | replace: '-', '_' %}
              {% if link.links != blank %}
                <div x-data="{ {{link_handle}}: false }" class="relative">
                  <button
                    x-on:click="{{ link_handle }} = ! {{ link_handle }}"
                    x-on:click="mobileMenuOpen = false"
                    type="button"
                    class="flex w-full items-center justify-between text-base text-gray-500 hover:text-gray-900"
                  >
                    <div>{{ link.title }}</div>
                    {% render 'icon-dropdown' %}
                  </button>

                  <div x-show="{{link_handle}}" class="grid gap-y-7 py-3">
                    {% for childlink in link.links %}
                      <a
                        href="#"
                        class="-m-3 mt-2 flex items-center rounded-md p-3 text-gray-500 hover:bg-gray-50 hover:text-gray-900"
                      >
                        <span class="ml-3 text-base font-medium text-gray-500">
                          {{- childlink.title -}}
                        </span>
                      </a>
                    {% endfor %}
                  </div>
                </div>

              {% else %}
                <a
                  href="#"
                  class="-m-3 flex items-center rounded-md p-3 text-gray-500 hover:bg-gray-50 hover:text-gray-900"
                >
                  {{ link.title }}
                </a>
              {% endif %}
            {% endfor %}
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "mobile_menu_title",
      "label": "Title",
      "default": "Menu",
      "info": "This is title of the mobile menu window"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Header Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
