<div class="relative bg-white" x-data="{ mobileMenuOpen: false }">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-center py-6 md:justify-start md:space-x-10">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start truncate lg:flex-1">
        <h1 class="truncate text-xl font-bold">{{ shop.name }}</h1>
      </div>

      <div class="-my-2 -mr-2 ml-3 md:hidden">
        <button
          x-on:click="mobileMenuOpen = true"
          type="button"
          class="inline-flex items-center justify-center bg-white p-2 focus:outline-none"
        >
          {% render 'icon-menu' %}
        </button>
      </div>
      <!-- NAVIGATION MENU -->
      <nav class="hidden space-x-10 md:flex">
        {% if section.settings.menu.links == blank %}
          {% assign main_menu_linklist = linklists[section.settings.menu].links %}
        {% else %}
          {% assign main_menu_linklist = section.settings.menu.links %}
        {% endif %}
        {% for link in main_menu_linklist %}
          {% if link.links != blank %}
            {% assign link_handle = link.handle | replace: '-', '_' %}
            <div class="relative" x-data="{ {{ link_handle }}: false }">
              <button
                type="button"
                x-on:click="{{ link_handle }} = ! {{ link_handle }}"
                class="inline-flex items-center"
              >
                {{ link.title }}
                {% render 'icon-dropdown' %}
              </button>

              <div
                x-transition:enter="transition ease-out duration-300"
                x-transition:enter-start="opacity-0 translate-y-3"
                x-transition:enter-end="opacity-100 translate-y-0"
                x-transition:leave="transition ease-out duration-300"
                x-transition:leave-start="opacity-100 translate-y-0"
                x-transition:leave-end="opacity-0 translate-y-3"
                x-show="{{ link_handle }}"
                @click.away="{{ link_handle }} = false"
                class="absolute z-10 mt-5 -ml-5 w-screen max-w-md transform px-2 sm:px-0 lg:left-1/2 lg:ml-0 lg:-translate-x-1/2"
              >
                <div class="ring-opacity-5 overflow-hidden rounded-lg border shadow-lg ring-black">
                  <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                    {% for childlink in link.links %}
                      <a
                        href="{{ childlink.url }}"
                        class="items start -m-3 flex rounded-lg p-3 hover:bg-gray-100"
                      >
                        <div class="ml-4">
                          <p class="text-base font-medium text-gray-900">
                            {{ childlink.title }}
                          </p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <a
              href="{{ link.url }}"
              class="text-base text-gray-500 hover:text-gray-900"
            >
              {{- link.title -}}
            </a>
          {% endif %}
        {% endfor %}
      </nav>
      <!-- CART BUTTON / ACCOUNT LINKS IF ENABLED -->
      <div class="hidden items-center justify-end space-x-5 md:flex md:flex-1">
        <a
          href="{{ routes.cart_url }}"
          class="text-base whitespace-nowrap text-gray-500 hover:text-gray-900"
        >
          {% render 'icon-shopping-bag' %}
        </a>

        {% if shop.customer_accounts_enabled %}
          {% if customer %}
            <a
              href="{{ routes.account_url }}"
              class="text-base text-gray-500 hover:text-gray-900"
              >account</a
            >
            {{
              'Log out'
              | customer_logout_link
              | replace: '<a',
                '<a class="text-base text-gray-500 hover:text-gray-900"'
            }}
          {% else %}
            {{
              'Log in '
              | customer_login_link
              | replace: '<a',
                '<a class="text-base text-gray-500 hover:text-gray-900"'
            }}
            {{
              'Register'
              | customer_register_link
              | replace: '<a',
                '<a class="text-base text-gray-500 hover:text-gray-900"'
            }}
          {% endif %}
        {% endif %}
      </div>

      <!-- MOBILE MENU CONTAINER -->
      <div
        x-show="mobileMenuOpen"
        class="absolute inset-x-0 top-0 z-10 origin-top-left transform p-2 md:hidden"
      >
        <div class="ring-opacity-5 w-full rounded-lg bg-white shadow-lg ring-1 ring-black">
          <div class="divide-y-2 divide-gray-50 p-5">
            <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->

            <div class="flex items-center justify-between pb-3">
              <div>
                <h1 class="text-lg text-gray-500">
                  {{ section.settings.mobile_menu_title }}
                </h1>
              </div>
              <div class="-mr-2">
                <button
                  x-on:click="mobileMenuOpen = false"
                  type="button"
                  class="rounded-md bg-white p-2 text-gray-500"
                >
                  {% render 'icon-close' %}
                </button>
              </div>
            </div>

            <!-- NAVIGATION LINKS FOR MOBILE MENU -->
            <div class="pt-3">
              <nav class="grid gap-y-7">
                {% if section.settings.menu.links == blank %}
                  {% assign main_menu_linklist = linklists[section.settings.menu].links %}
                {% else %}
                  {% assign main_menu_linklist = section.settings.menu.links %}
                {% endif %}
                {% for link in main_menu_linklist %}
                  {% if link.links != blank %}
                    {% assign mobile_link_handle = link.handle
                      | replace: '-', '_'
                    %}
                    <div
                      class="relative"
                      x-data="{ {{ mobile_link_handle }}: false }"
                    >
                      <button
                        x-on:click="{{ mobile_link_handle }} = ! {{ mobile_link_handle }}"
                        type="button"
                        class="flex w-full items-center justify-between text-base text-gray-500 hover:text-gray-900"
                      >
                        <div>{{ link.title }}</div>
                        {% render 'icon-dropdown' %}
                      </button>

                      <div
                        x-show="{{ mobile_link_handle }}"
                        class="grid gap-y-7 py-3"
                      >
                        {% for childlink in link.links %}
                          <a
                            href="{{ childlink.url }}"
                            class="-m-3 mt-2 flex items-center rounded-md p-3 text-gray-500 hover:bg-gray-50 hover:text-gray-900"
                          >
                            <span class="ml-3 text-base font-medium text-gray-500">
                              {{- childlink.title -}}
                            </span>
                          </a>
                        {% endfor %}
                      </div>
                    </div>
                  {% else %}
                    <a
                      href="{{ link.url }}"
                      class="-m-3 flex items-center rounded-md p-3 text-gray-500 hover:bg-gray-50 hover:text-gray-900"
                    >
                      {{ link.title }}
                    </a>
                  {% endif %}
                {% endfor %}
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "mobile_menu_title",
      "default": "Menu",
      "label": "Mobile Menu Title"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Heading Navigation Menu"
    }
  ]
}
{% endschema %}
