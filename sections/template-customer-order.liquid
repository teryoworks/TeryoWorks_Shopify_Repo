<div class="mx-auto max-w-6xl px-4 py-12">
  <div class="my-5 flex items-start justify-between md:items-end">
    <div class="w-1/2">
      <h1 class="text-2xl font-bold text-gray-700">Order {{ order.name }}</h1>
      <p class="my-2 text-gray-500">
        Placed on {{ order.created_at | date: format: 'date' }}
      </p>
      <span class="my-2 rounded-full bg-gray-700 px-4 py-1 text-sm text-white">
        {{ order.financial_status_label }}
      </span>
    </div>

    <a
      href="{{ routes.account_url }}"
      class="font-medium text-blue-700 underline hover:text-blue-900"
    >
      Back to account
    </a>
  </div>

  <div>
    {% for line_item in order.line_items %}
      <div class="mb-4 w-full divide-y rounded-sm border border-gray-200">
        <div class="grid grid-cols-1 gap-4 p-4 md:grid-cols-2 md:p-12 lg:grid-cols-3 lg:gap-12">
          <div class="h-80 min-h-80 w-full overflow-hidden rounded-md border bg-gray-200">
            {% if line_item.image %}
              <img
                class="h-full w-full object-cover object-center"
                src="{{ line_item.image | img_url: 'medium' }}"
                alt="{{ line_item.image.alt }}"
              >
            {% else %}
              {{
                'product-1'
                | placeholder_svg_tag: 'w-full h-full object-center object-cover'
              }}
            {% endif %}
          </div>

          <div>
            <h1 class="mb-4 text-xl font-medium">
              {{ line_item.title | link_to: line_item.product.url }}
            </h1>

            <table class="mb-4 w-full table-auto">
              <tbody>
                <tr>
                  <td class="border border-gray-200 px-4 py-2">Price</td>
                  <td class="border border-gray-200 px-4 py-2">
                    {{ line_item.original_price | money }}
                  </td>
                </tr>
                <tr>
                  <td class="border border-gray-200 px-4 py-2">Quantity</td>
                  <td class="border border-gray-200 px-4 py-2">
                    {{ line_item.quantity }}
                  </td>
                </tr>
                <tr>
                  <td class="border border-gray-200 px-4 py-2">Final price</td>
                  <td class="border border-gray-200 px-4 py-2">
                    {{ line_item.final_line_price | money }}
                  </td>
                </tr>
              </tbody>
            </table>

            <div class="mb-4 text-gray-500">
              {{ line_item.product.description | truncatewords: 15 }}
            </div>
          </div>

          <div>
            <h1 class="mb-4 font-medium">Delivery address</h1>

            <div class="mb-4 text-gray-500">
              <div>
                <p>Address 1: {{ order.shipping_address.address1 }}</p>
                <p>Address 2: {{ order.shipping_address.address2 }}</p>
                <p>Street: {{ order.shipping_address.street }}</p>
                <p>Province: {{ order.shipping_address.province }}</p>
                <p>City: {{ order.shipping_address.city }}</p>
                <p>ZIP: {{ order.shipping_address.zip }}</p>
                <p>Country: {{ order.shipping_address.country }}</p>
              </div>
            </div>
          </div>
        </div>

        <div class="p-4 md:p-12">
          <h1 class="mb-4 text-lg font-medium">Fulfillment</h1>

          {% if line_item.successfully_fulfilled_quantity > 0 %}
            <p class="mb-2">
              We have fulfilled
              {{ line_item.successfully_fulfilled_quantity }} items of your
              recent order.
            </p>
            <p class="mb-2">
              Tracking company: {{ line_item.fulfillment.tracking_company }}
            </p>
            <p class="mb-2">
              Tracking number: {{ line_item.fulfillment.tracking_number }}
            </p>

            <a
              target="_blank"
              href="{{ line_item.fulfillment.tracking_url }}"
              class="flex w-max rounded bg-gray-700 px-4 py-1 text-sm font-medium text-white hover:bg-gray-900"
            >
              Track order
              <span class="ml-1">{% render 'icon-link' %}</span>
            </a>
          {% else %}
            <p class="text-gray-500">This item is not yet fulfilled</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="my-6 grid w-full grid-cols-1 gap-4 rounded-sm border border-gray-200 bg-gray-50 p-4 md:grid-cols-2 md:p-12 lg:grid-cols-3 lg:gap-12">
    <div>
      <h1 class="mb-4 font-medium">Billing address</h1>

      {{ order.billing_address | format_address }}
    </div>
    <div>
      <h1 class="mb-4 font-medium">Payment information</h1>

      {% for transaction in order.transactions %}
        <div class="mb-4">
          {% assign credit_card_company = transaction.payment_details.credit_card_company %}
          {% assign credit_card_last_four_digits = transaction.payment_details.credit_card_number %}

          {% if credit_card_company %}
            <p>{{ credit_card_company }}</p>
            <p>{{ credit_card_last_four_digits }}</p>

            {% case transaction.status_label %}
              {% when 'Failure' %}
                {% assign background = 'red' %}
              {% else %}
                {% assign background = 'green' %}
            {% endcase %}

            <span class="bg-{{ background }}-700 rounded-full px-4 py-1 text-sm text-white">
              {{ transaction.status_label }}
            </span>
          {% else %}
            <p class="mb-4 text-sm">
              This order is manually placed {{ shop.name }}
            </p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    <div>
      <table class="mb-4 w-full table-auto">
        <tbody>
          <tr>
            <td class="border border-gray-200 px-4 py-2">Subtotal</td>
            <td class="border border-gray-200 px-4 py-2">
              {{ order.subtotal_price | money }}
            </td>
          </tr>
          <tr>
            <td class="border border-gray-200 px-4 py-2">Shipping</td>
            <td class="border border-gray-200 px-4 py-2">
              {{ order.shipping_price | money }}
            </td>
          </tr>
          <tr>
            <td class="border border-gray-200 px-4 py-2">Total</td>
            <td class="border border-gray-200 px-4 py-2">
              {{ order.total_price | money }}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
