<div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
  <h1 class="text-2xl font-bold text-gray-700">Account</h1>

  <div class="block gap-4 md:flex">
    {% assign number_of_orders = customer.orders | size %}
    {% if number_of_orders > 0 %}
      <div class="my-6 w-full md:my-12">
        <h2 class="text-xl font-bold text-gray-700">Order history</h2>

        {% paginate customer.orders by 10 %}
          <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            {% for order in customer.orders %}
              <div class="relative">
                <div class="min-80 w-full overflow-hidden rounded-md bg-gray-200 lg:h-80">
                  {% if order.line_items.first.image %}
                    <img
                      class="h-full w-full object-cover object-center"
                      src="{{ order.line_items.first.image | img_url: 'medium' }}"
                      alt="{{ order.line_items.first.image.alt }}"
                    >
                  {% else %}
                    {{
                      'product-1'
                      | placeholder_svg_tag: 'w-full h-full object-center object-cover'
                    }}
                  {% endif %}
                </div>

                <div class="mt-4 flex items-start justify-between">
                  <div>
                    <h3 class="text-sm text-gray-700">
                      {{ order.name | link_to: order.customer_url }}
                    </h3>

                    <p class="mt-1 text-sm text-gray-500">
                      {{ order.financial_status_label }}
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="rounded-full bg-gray-700 px-3 py-1 text-sm font-medium text-white">
                      {{ order.fulfillment_status_label }}
                    </p>
                    <p class="text-sm">{{ order.total_price | money }}</p>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>

          <div class="mx-auto max-w-6xl">
            {% render 'pagination', pagination: paginate %}
          </div>
        {% endpaginate %}
      </div>
    {% else %}
      <div class="flex h-80 w-full items-center justify-center">
        <h2 class="text-base font-medium md:text-2xl">
          You currently don't have any orders
        </h2>
      </div>
    {% endif %}

    <div class="w-full md:w-1/4">
      <h2 class="mb-12 text-xl font-bold text-gray-700">Account details</h2>

      {{ customer.default_address | format_address }}

      <a
        href="{{ routes.account_addresses_url }}"
        class="text-sm text-blue-600 underline hover:text-blue-900"
      >
        View addresses
      </a>
    </div>
  </div>
</div>
