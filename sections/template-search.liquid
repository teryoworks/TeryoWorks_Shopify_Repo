<div class="containter mx-auto">
  {% paginate search.results by 10 %}
    <h1 class="my-4 text-center text-xl">Search Results</h1>

    <div class="flex items-center justify-center">
      <form
        action="{{ routes.search_url }}"
        method="get"
        class="flex rounded border"
      >
        <input
          class="w-80 border-none px-4 py-2"
          type="search"
          name="q"
          placeholder="Search"
          value="{{ search.terms | escape }}"
        >
        <button
          type="submit"
          class="bg-gray-900 px-4 text-white hover:bg-gray-700"
        >
          Search
        </button>
      </form>
    </div>

    {% if search.performed %}
      {% if search.results.size > 0 %}
        <div class="mx-auto max-w-6xl">
          <p class="my-10 text-center text-gray-500">
            {{ search.results_count }} results found for " {{ search.terms }} "
          </p>
          <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
            {% for item in search.results %}
              {% case item.object_type %}
                {% when 'product' %}
                  {% render 'product-card', product_product: item %}
                {% else %}

              {% endcase %}
            {% endfor %}
          </div>
        </div>
      {% else %}
        <div class="my-4 text-center">
          <p>
            No results found for the search term: {{ search.terms }}. Try to use
            a different keyword
          </p>
        </div>
      {% endif %}
    {% endif %}

    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</div>
