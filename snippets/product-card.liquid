<div class="w-full px-3 py-6">
  <div class="overflow-hidden rounded-lg border-white bg-white shadow-lg">
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="h-full w-full transform object-cover transition duration-1000 ease-in-out hover:scale-105"
            src="{{ product_product.featured_image | img_url: 'medium'}}"
            alt=" {{ product_product.featured_image.alt }}"
          >
        </div>

      {% else %}
        {{
          'product-1'
          | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100 transform transition duration-1000 ease-in-out hover:scale-105'
        }}
      {% endif %}
    </a>

    <div class="flex flex-col p-4">
      <span class="text-sm text-gray-500"> {{ product_product.vendor }} </span>
      <a
        href="{{ product_product.url }}"
        class="font-medium text-gray-700 uppercase"
      >
        {{ product_product.title -}}
      </a>
      <p class="text-gray-500">{{ product_product.price | money }}</p>
    </div>
  </div>
</div>
