{% if pagination.pages > 0 %}
  <nav role="navigation" class="my-8 flex justify-center">
    {% if pagination.previous %}
      <a
        href="{{ pagination.previous.url }}"
        class="mx-1 rounded-sm border border-gray-600 px-8 py-3 font-medium text-gray-600 hover:bg-gray-600 hover:text-white"
      >
        {{ pagination.previous.title }}
      </a>
    {% endif %}
    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a
          href="{{ part.url }}"
          class="mx-1 rounded-sm border border-gray-600 px-8 py-3 font-medium text-gray-600 hover:bg-gray-600 hover:text-white"
        >
          {{ part.title }}
        </a>
      {% else %}
        <span class="mx-1 rounded-sm border border-gray-600 bg-gray-600 px-8 py-3 font-medium text-white">
          {{ part.title }}
        </span>
      {% endif %}
    {% endfor %}
    {% if pagination.next %}
      <a
        href="{{ pagination.next.url }}"
        class="mx-1 rounded-sm border border-gray-600 px-8 py-3 font-medium text-gray-600 hover:bg-gray-600 hover:text-white"
      >
        {{ pagination.next.title }}
      </a>
    {% endif %}
  </nav>
{% endif %}
